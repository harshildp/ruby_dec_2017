<h1>Sign In</h1>
<form action='<%= new_user_path %>' method='post'>
    <% if flash['errors'] %>
        <% flash['errors'].each do |err| %>
            <p class='error'> <%= err %> </p>
        <% end %>
    <% end %>
    <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">        
    <input name='username' placeholder='Enter a username' type='text' id='user_username'>
    <button id='sign' type='submit'>Sign In</button>
</form>